extends layouts/main.pug
block content
    .container.mt-5 
        .row 
            each product in products 
                .col-12.col-md-6.col-lg-4.col-xl-3
                    .card
                        .card-body
                            h5.card-title #{product.title}
                            p.card-text #{product.description}
                            h5.text-center 
                                span.fw-bold Price: 
                                span.text-warning #{product.price}

