<div class="container col-md-6 mt-5">
  <form action="/login" method="POST" class="card card-body mb-3 shadow">
    <h2 class="text-center">Login</h2>
    <div class="mb-3">
      <input
        type="email"
        class="form-control"
        name="email"
        placeholder="Email"
      />
    </div>
    <div class="mb-3">
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="Password"
      />
    </div>
    <div class="mb-3 text-center">
      <button class="btn btn-primary" type="submit"> Login</button>
    </div>
    <p class="text-center">
      <a href="#" class="text-warning"> Forgot your password?</a>
    </p>
  </form>
  <p class="text-center">
    Don't have an account
    <a href="/signup"> Sign up here !</a></p>
</div>